<Window x:Class="TodoWpfApp.TaskHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task History" Height="400" Width="750" WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Completed and deleted task history" FontWeight="Bold" Margin="0,0,0,5" />
        <DataGrid Grid.Row="1" x:Name="HistoryGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=g}" Width="*" />
                <DataGridTextColumn Header="Completed" Binding="{Binding CompletedAt, StringFormat=g}" Width="*" />
                <DataGridTextColumn Header="Deleted" Binding="{Binding DeletedAt, StringFormat=g}" Width="*" />
                <DataGridTextColumn Header="Time to Complete" Binding="{Binding TimeToComplete}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
