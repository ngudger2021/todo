<UserControl x:Class="TodoWpfApp.KanbanBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TodoWpfApp"
             xmlns:models="clr-namespace:TodoWpfApp.Models">
    <UserControl.Resources>
        <!-- Converter to convert hex color to brush -->
        <local:HexToBrushConverter x:Key="HexToBrushConverter"/>
        <local:StatusTagConverter x:Key="StatusTagConverter"/>
        <local:StatusTagsToBrushConverter x:Key="StatusTagsToBrushConverter"/>
        <local:StatusTagsToForegroundConverter x:Key="StatusTagsToForegroundConverter"/>

        <!-- Task Card Template -->
        <DataTemplate x:Key="TaskCardTemplate">
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="5"
                    Padding="10"
                    Cursor="Hand"
                    MouseLeftButtonDown="TaskCard_MouseLeftButtonDown"
                    AllowDrop="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,5" MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border Background="{Binding Tags, Converter={StaticResource StatusTagsToBrushConverter}}"
                                CornerRadius="3" Padding="4,2" Margin="0,0,5,0">
                            <TextBlock Text="{Binding Tags, Converter={StaticResource StatusTagConverter}}"
                                       FontSize="10"
                                       Foreground="{Binding Tags, Converter={StaticResource StatusTagsToForegroundConverter}}"/>
                        </Border>
                        <Border Background="{DynamicResource AccentBrush}" CornerRadius="3" Padding="4,2" Margin="0,0,5,0">
                            <TextBlock Text="{Binding Priority}" FontSize="10" Foreground="{DynamicResource AccentForegroundBrush}"/>
                        </Border>
                        <TextBlock Text="{Binding DueDate, StringFormat=d}" FontSize="10" VerticalAlignment="Center"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                    </StackPanel>
                    <WrapPanel Margin="0,5,0,0">
                        <ItemsControl ItemsSource="{Binding Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource ControlBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="2"
                                            Padding="3,1"
                                            Margin="0,0,3,3">
                                        <TextBlock Text="{Binding}" FontSize="9"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Board Actions -->
        <Border Grid.Row="0" Padding="10" Background="{DynamicResource SecondaryBackgroundBrush}">
            <WrapPanel VerticalAlignment="Center">
                <Button x:Name="AddTaskButton" Content="+ Add Task" Margin="2" Click="AddTaskButton_Click"/>
            </WrapPanel>
        </Border>

        <!-- Kanban Board -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="ColumnsControl" Padding="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Kanban Column -->
                        <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                BorderBrush="{DynamicResource ControlBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="5"
                                Width="300"
                                MinHeight="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Column Header -->
                                <Border Grid.Row="0"
                                        Background="{Binding Color, Converter={StaticResource HexToBrushConverter}}"
                                        Padding="10"
                                        CornerRadius="4,4,0,0"
                                        MouseLeftButtonDown="ColumnHeader_MouseLeftButtonDown">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                        <TextBlock x:Name="TaskCountText" FontSize="11" Foreground="White" Opacity="0.9" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Tasks List -->
                                <ScrollViewer Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              Padding="5"
                                              AllowDrop="True"
                                              DragOver="TasksList_DragOver"
                                              Drop="TasksList_Drop"
                                              Background="Transparent">
                                    <ItemsControl x:Name="TasksList"
                                                  ItemTemplate="{StaticResource TaskCardTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
